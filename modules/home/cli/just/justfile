set positional-arguments

hi:
  echo "hello Nikhil"
  pwd 

hi2:
  @echo "hello Nikhil"
  @pwd 

# Convert markdown file to PDF with Catppuccin LaTeX theme (with timestamp in Downloads)
md-pdf-latex file:
  #!/usr/bin/env bash
  set -euo pipefail
  input_file="{{file}}"
  base_name="$(basename "$input_file" .md)"
  timestamp="$(date +%Y-%m-%d-%H%M)"
  output_file="$HOME/Downloads/${base_name}-${timestamp}.pdf"
  pandoc -d pdf-latex "$input_file" -o "$output_file"
  echo "PDF created at ${output_file}"

# Convert markdown file to PDF with Catppuccin Typst theme (with timestamp in Downloads)
md-pdf-typst file:
    #!/usr/bin/env bash
    set -euo pipefail
    input_file="{{file}}"
    base_name="$(basename "$input_file" .md)"
    timestamp="$(date +%Y-%m-%d-%H%M)"
    output_file="$HOME/Downloads/${base_name}-${timestamp}.pdf"
    pandoc -d pdf-typst "$input_file" -o "$output_file"
    echo "PDF created at ${output_file}"

# Convert markdown file to PDF with Catppuccin Typst theme, mobile optimized (with timestamp in Downloads)
md-pdf-typst-mobile file:
  #!/usr/bin/env bash
  set -euo pipefail
  input_file="{{file}}"
  base_name="$(basename "$input_file" .md)"
  timestamp="$(date +%Y-%m-%d-%H%M)"
  output_file="$HOME/Downloads/${base_name}-mobile-${timestamp}.pdf"
  pandoc -d pdf-typst-mobile "$input_file" -o "$output_file"
  echo "PDF created at ${output_file}"


# Nix configuration management with nh

# Switch Home Manager configuration (auto-detects based on user@hostname)
nh-home:
    nh home switch --backup-extension backup

# Switch Darwin system configuration (auto-detects based on hostname)
nh-darwin:
    nh darwin switch

# Switch NixOS system configuration (auto-detects based on hostname)
nh-os:
    nh os switch

# Update flake inputs
nh-update:
    nh flake update

# Check all configurations
nh-check:
    nh flake check

# Clean Nix store and user profile
nh-clean:
    nh clean all
