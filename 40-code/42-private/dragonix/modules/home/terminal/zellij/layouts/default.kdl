layout {
    default_tab_template {
        // Status Bar at the TOP
        pane size=1 borderless=true {
            plugin location="https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" {
                // -- Left Side: Mode, Session, Tabs --
                format_left   "{mode} #[fg=#89B4FA,bold]{session} {tabs}"
                // -- Right Side: Git Branch, Time --
                format_right  "{command_git_branch} {datetime}"
                format_space  ""

                // -- Styling --
                border_enabled  "false"
                border_char     "─"
                border_format   "#[fg=#6C7086]{char}"
                border_position "bottom"

                // -- Modes --
                mode_normal        "#[bg=#89B4FA] "
                mode_locked        "#[bg=#6C7086] "
                mode_resize        "#[bg=#F9E2AF] "
                mode_pane          "#[bg=#fab387] "
                mode_tab           "#[bg=#cba6f7] "
                mode_scroll        "#[bg=#a6e3a1] "

                // -- Tabs --
                // Inactive: Text color only
                tab_normal   "#[fg=#6C7086] {index} {name} "
                // Active: Orange background, Dark text (High Contrast)
                tab_active   "#[bg=#fab387,fg=#181825,bold] {index} {name} "
                
                // -- Widgets --
                command_git_branch_command     "git rev-parse --abbrev-ref HEAD"
                command_git_branch_format      "#[fg=blue]  {stdout} "
                command_git_branch_interval    "10"
                command_git_branch_rendermode  "static"

                datetime        "#[fg=#6C7086,bold] {format} "
                datetime_format "%H:%M"
                datetime_timezone "auto"
            }
        }
        
        children
    }

    tab split_direction="vertical" {
        pane size="70%"
        pane
    }
}
